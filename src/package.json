{
    "name": "safeturned-website",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev",
        "build": "cross-env NEXT_PUBLIC_API_URL=https://api.safeturned.com next build",
        "start": "next start",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "type-check": "tsc --noEmit",
        "validate:locales": "node scripts/validate-locales.js",
        "validate:all": "npm run lint && npm run format:check && npm run type-check && npm run validate:locales",
        "docker:build": "docker build -t safeturned-website .",
        "docker:run": "docker run -p 3000:3000 safeturned-website"
    },
    "dependencies": {
        "@types/react-syntax-highlighter": "^15.5.13",
        "badge-maker": "^5.0.2",
        "next": "^16.0.7",
        "react": "^19",
        "react-dom": "^19",
        "react-i18next": "^16.4.0",
        "react-syntax-highlighter": "^16.1.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@tailwindcss/postcss": "^4.1.17",
        "@types/node": "^24.10.1",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@typescript-eslint/eslint-plugin": "^8.48.1",
        "@typescript-eslint/parser": "^8.48.1",
        "baseline-browser-mapping": "^2.9.4",
        "cross-env": "^10.1.0",
        "eslint": "^9.39.1",
        "eslint-config-next": "^16.0.7",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.1.3",
        "postcss": "^8",
        "prettier": "^3.7.4",
        "tailwindcss": "^4.1.16",
        "typescript": "^5"
    }
}
